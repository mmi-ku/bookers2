
      <h2>User info</h2>
        <%= image_tag @user.get_profile_image %>
        <table class="table">
          <tr> 
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
           
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </table>
        
        <div class="row">
          <%= link_to edit_user_path(@user),class: 'btn btn-outline-secondary btn-block edit_user_170568' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
    
        <h2 class="mt-3">New book</h2>
        <% if book.errors.any? %>
          <%= book.errors.count %>errors prohibited this obj from being saved:
          <ul>
            <% book.errors.full_messages.each do |message| %>
