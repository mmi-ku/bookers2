    <div class="container">
        <div class="row">

            <div class="col-md-3">
               <%= render 'list', {book: @book_new, user: @user} %>
            </div>

            <div class="col-md-8 offset-md-1">
                <h2>Book detail</h2>
                    <table class="table">
                        <tbody>
                            <tr>

                                <td><%= link_to user_path(@user) do %>
                                    <%= image_tag @user.get_profile_image %>
                                    <% end %>
                                    <br>
                                    <%= link_to @book.user.name, user_path(@user) %>
                                </td>
                                <td><%= link_to @book.title, book_path(@book) %></td>
                                <td><%= @book.body %></td>

                                <% if @book.user == current_user %>
                                    <td><%= link_to "Edit", edit_book_path(@book) %></td>
                                    <td><%= link_to "Destroy", book_path(@book), method: :delete %></td>
                                <% end %>
                            </tr>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>