
<div class="container px-5 px-sm-0">

  <div class="row">
    <div class="col-md-3">
        <%= render 'list', {book: @book_new, user: @user} %>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                     <% @books.each do |book| %>
                     <th><%= book.book_title %></th>
                     <th><%= book.book_review %></th>
                     <th colspan="3"></th>
                     <% end %>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= image_tag @user.get_profile_image %></td>
                    </tr>
                </tbody>
    </div>
</div>