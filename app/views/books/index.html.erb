<h1>User info</h1>

  <%= form_with model: @user do |f| %>
    <h4>name</h4>
    <%= f.text_field :name %>
    <h4>introduction</h4>
    <%= f.text_area :introduction %>
  <% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
    <%= f.text_field :book_title %>
    <h4>Opinion</h4>
    <%= f.text_area :book_review %>
    <%= f.submit 'Create Book' %>
  <% end %>

   <h1>Books</h1>

