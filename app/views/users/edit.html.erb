        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
<% end %>


<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div> <label for="inputName">Name</label>
          <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name"%></div>
        </div>
         
        <div> 
          <label for="inputImage">Image</label>
          <div><%= f.file_field :profile_image, placeholder: "UploadImage", accept: "image/*" %> </div>
        </div>  
         
        <div>
          <label for="inputName">Introduction</label>
          <div><%= f.text_field :introduction, autofocus: true, id:"EditIntroduction", placeholder:"Introduction"%></div>
        </div>
          <br>
        <div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
          
      <% end %>
  </div>
</div>