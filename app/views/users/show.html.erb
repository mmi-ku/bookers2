<div class="row">
    <%= render 'books/list', {book: @book_new, user: @user} %>
    
<div class="col-md-8 offset-md-1">
    <h2>Books</h2>
     <table class="table table-hover table-inverse">
    <tr>
      <% @books.each do |book| %>
      <%= image_tag @user.get_profile_image %>
      <th>Title：<%= book.book_title %></th>
      <th>Opinion：<%= book.book_review %></th>
      <th colspan="3"></th>
      <th><%= book.user.name %></th>
      <% end %>
    </tr>
</div>

